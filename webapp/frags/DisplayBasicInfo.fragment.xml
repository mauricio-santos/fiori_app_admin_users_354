<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
>
    <VBox
        id="vBoxBasicInfo"
        class="sapUiSmallMargin"
    >
        <form:SimpleForm
            xmlns:sap.ui.core="sap.ui.core"
            id="formDisplayBasicInfo"
            class="sapUxAPObjectPageSubSectionAlignContent"
            editable="false"
            layout="ColumnLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="4"
            emptySpanL="4"
            emptySpanM="4"
            emptySpanS="0"
            columnsM="2"
            columnsL="3"
            columnsXL="4"
            singleContainerFullSize="false"
        >
            <form:content>
                <Label
                    id="_IDGenLabel9"
                    text="{i18n>sfFirstName}"
                />
                <Text
                    id="_IDGenText5"
                    text="{Firstname}"
                    class="sapMObjectNumberMedium"
                />

                <Label
                    id="_IDGenLabel92"
                    text="{i18n>sfLastName}"
                />
                <Text
                    id="_IDGenText52"
                    text="{Lastname}"
                    class="sapMObjectNumberMedium"
                />


                <Label
                    id="_IDGenLabel10"
                    text="{i18n>sfEmail}"
                />
                <Text
                    id="_IDGenTexttext1"
                    text="{Email}"
                    class="sapMObjectNumberMedium"
                />

                <Label id="_IDGenLabel11"   
                    text="{i18n>sfPhone}"
                />
                <Text id="_IDGenText6"
                    text="{Fone}"
                    class="sapMObjectNumberMedium"
                />
            </form:content>
        </form:SimpleForm>
    </VBox>
</core:FragmentDefinition>
